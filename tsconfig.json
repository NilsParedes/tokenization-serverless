{
  "compilerOptions": {
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "module": "commonjs",
    "isolatedModules": false,
    "allowJs": true,
    "target": "es2016",
    "outDir": ".build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": [
      "es2016"
    ],
    "rootDir": "./src"
  }
}